@model PetProject.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css" asp-append-version="true"/>
<script src="~/js/validations.js"></script>

<h1 class="register-title">Регистрация</h1>
<form asp-action="Register" method="post" class="register-form">
    <!-- Сводка ошибок, которая будет отображаться при наличии ошибок -->
    <div asp-validation-summary="All" class="validation-summary"></div>

    <p class="form-group">
        <label asp-for="Name" class="form-label">Имя</label><br/>
        <input type="text" asp-for="Name" id="Name" class="form-input" data-val="true" data-val-required="Имя не может быть пустым" />
        <span asp-validation-for="Name" class="field-validation-error"></span>
    </p>

    <p class="form-group">
        <label asp-for="Email" class="form-label">Электронный адрес</label><br/>
        <input type="email" asp-for="Email" id="Email" class="form-input" data-val="true" data-val-email="Некорректный адрес электронной почты"/>
        <span asp-validation-for="Email" class="field-validation-error"></span>
    </p>

    <p class="form-group">
        <label for="Password" class="form-label">Пароль</label><br/>
        <input type="password" asp-for="Password" id="Password" class="form-input"/>
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </p>

    <p class="form-group">
        <label for="PasswordConfirm" class="form-label">Подтвердите пароль</label><br/>
        <input type="password" asp-for="PasswordConfirm" id="PasswordConfirm" class="form-input"/>
        <span asp-validation-for="PasswordConfirm" class="field-validation-error"></span>
    </p>

    <p>
        <input type="submit" value="Зарегистрироваться" class="form-submit"/>
    </p>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

