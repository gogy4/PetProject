@model PetProject.Models.User

@{
    ViewData["Title"] = "Register";
}

<h1>Регистрация</h1>
<form>
    <p>
        <label asp-for="Name">Имя</label><br/>
        <input type="text" asp-for="Name"/>
    </p>
    <p>
        <label asp-for="Email">Электронный адрес</label><br/>
        <input type="email" asp-for="Email"/>
    </p>
    <p>
        <label asp-for='Password'>Пароль</label><br/>
        <input type="password" asp-for="Password"/>
    </p>
    <p>
        <label asp-for="PasswordConfirm">Подтвердите пароль</label><br/>
        <input type="password" asp-for="PasswordConfirm"/>
    </p>
    <p>
        <input type="submit" value="Зарегистрироваться"/>
    </p>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>