<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
@{
    ViewBag.Title = "Главная страница";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var logged = !string.IsNullOrEmpty(currentUserId);
}
@if (TempData["Message"] != null)
{
    <div class="message-box">
        @TempData["Message"]
    </div>
}
<h2 class="page-heading">Добавить новую запись</h2>
<form asp-action="Paste" asp-controller="Paste" method="post" class="paste-form">
    <p class="form-group">
        <label for="content" class="label">Введите текст</label><br />
        <textarea id="content" name="content" class="textarea"></textarea>
    </p>
    <p class="form-group">
        <label for="expiration" class="label">Выберите срок хранения пасты</label><br />
        <select id="expiration" name="expiration" class="select">
            <option value="7">7 дней</option>
            <option value="30">30 дней</option>
            @if (logged)
            {
                <option value="365">1 год</option>
            }
        </select>
    </p>
    <p class="form-group">
        <input type="submit" value="Сохранить" class="submit-btn"/>
    </p>
</form>
